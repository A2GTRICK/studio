rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- USER DATA ---
    // Users can create their own document upon signup.
    // They can only read and update their OWN document.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // Users can read/write to their own progress sub-collection.
    match /users/{userId}/progress/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // --- NOTES ---
    // Any authenticated (logged-in) user can read notes.
    // Only the admin can create, update, or delete notes.
    match /notes/{noteId} {
      allow read: if request.auth != null && request.auth.token.email_verified == true;
      allow create, update, delete: if request.auth != null && request.auth.token.email == 'a2gtrickacademy@gmail.com';
    }

    // --- NEWSLETTER ---
    // Anyone can subscribe (write) to the newsletter.
    // Only the admin can read the subscriber list.
    match /newsletter_subscriptions/{docId} {
      allow create;
      allow read, delete: if request.auth != null && request.auth.token.email == 'a2gtrickacademy@gmail.com';
    }
  }
}
