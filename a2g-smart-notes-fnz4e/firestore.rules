rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the admin
    function isAdmin() {
      return request.auth != null && request.auth.uid == 'sRiwSuQlxgbGRUcO7CevaJxQBEq2';
    }
    
    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Secure by default: deny all reads/writes unless explicitly allowed
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access ONLY to the lead magnet configuration document.
    // This is required for the newsletter signup feature on the public landing page.
    match /marketing_config/lead_magnet {
      allow read: if true;
      // ONLY the admin can ever change this link.
      allow write: if isAdmin();
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow a user to create their own document upon signup
      allow create: if request.auth.uid == userId;
      // Users can read/update their own data. Admin can read/update any user's data.
      allow read, update: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }

    // Rules for user-specific sub-collections
    match /users/{userId}/{subcollection}/{docId} {
        // Users can read/write to their own sub-collections (e.g., progress, payments)
        allow read, write: if isAuthenticated() && request.auth.uid == userId;
        // Admin can also read from these sub-collections for support.
        allow read: if isAdmin();
    }
    
    // Rules for the 'notes' collection
    match /notes/{noteId} {
      // Any authenticated user can read the notes list.
      allow read: if isAuthenticated();
      // Only the admin can create, update, or delete notes.
      allow create, update, delete: if isAdmin();
    }
    
    // Rules for the 'newsletter_subscriptions' collection
    match /newsletter_subscriptions/{subscriptionId} {
        // Anyone can create a subscription (i.e., sign up for the newsletter)
        allow create: if true;
        // Only the admin can read or delete subscribers
        allow read, delete: if isAdmin();
    }
  }
}
