
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default to locked down
    match /{document=**} {
      allow read, write: if false;
    }

    // Function to check if the user is an admin
    function isAdmin() {
        return request.auth != null && request.auth.uid == 'sRiwSuQlxgbGRUcO7CevaJxQBEq2';
    }

    // Allow users to read and update their own document.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Allow users to create their own document when signing up.
      allow create: if request.auth != null;

       // Allow admins to read/write to any user document (for management)
      allow read, write: if isAdmin();

      // Allow any authenticated user to create their own progress documents
      match /progress/{progressId} {
        allow create, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Allow anyone to read notes
    match /notes/{noteId} {
        allow read: if true;
    }

    // Only admins can create, update, or delete notes
    match /notes/{noteId} {
        allow create, update, delete: if isAdmin();
    }
    
    // Allow anyone to create a newsletter subscription.
    // Only the admin can read or delete them.
    match /newsletter_subscriptions/{subId} {
        allow create: if true;
        allow read, delete: if isAdmin();
    }
  }
}
