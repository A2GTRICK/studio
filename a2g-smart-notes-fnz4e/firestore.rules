
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated.
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the document.
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Notes can be read by any authenticated user.
    // Only admins can create, update, or delete notes.
    match /notes/{noteId} {
       allow read: if isSignedIn();
       allow write: if false; // Temporarily disable write for safety until admin role is implemented
    }

    // Users can read their own data.
    // A user can create their own document upon signup.
    // A user can update their own document, which is required for the payment verification flow.
    match /users/{userId} {
      allow read, update: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn();
      
      // Allow any signed-in user to read and write their own progress data.
      match /progress/{progressId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
    }

    // Newsletter subscriptions can be created by anyone.
    // Only admins should be able to read/delete them.
    match /newsletter_subscriptions/{subscriptionId} {
      allow create: if true;
      allow read, delete: if false; // Admin-only access would be implemented here
    }
  }
}
