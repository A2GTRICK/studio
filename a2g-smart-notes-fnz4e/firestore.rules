rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function to check if the user is an admin
    function isAdmin() {
      // In a production app, this should be based on a custom claim or a role field in the user's document.
      // For this prototype, we will hardcode the admin UID.
      return request.auth.uid == 'sRiwSuQlxgbGRUcO7CevaJxQBEq2';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Any authenticated user can read their own document.
      allow read: if isAuthenticated() && isOwner(userId);
      
      // An authenticated user can create their own document (e.g., on signup).
      allow create: if isAuthenticated() && isOwner(userId);

      // An authenticated user can update their own document.
      // This is critical for the payment verification flow to work.
      allow update: if isAuthenticated() && isOwner(userId);
      
      // An admin can read any user document.
      allow read: if isAdmin();
      
      // Nobody can delete user documents from the client.
      allow delete: if false;

      // Rules for user sub-collections like 'progress'
      match /progress/{progressId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }
    }

    // Rules for the 'notes' collection
    match /notes/{noteId} {
      // Any authenticated user can read all notes.
      allow read: if isAuthenticated();
      
      // Only an admin can create, update, or delete notes.
      allow write: if isAdmin();
    }
    
    // Rules for the 'newsletter_subscriptions' collection
    match /newsletter_subscriptions/{subscriptionId} {
        // Anyone can create a subscription (public form).
        allow create: if true;
        
        // Only an admin can read or delete subscriptions.
        allow read, delete: if isAdmin();
        
        // Nobody can update a subscription document.
        allow update: if false;
    }
  }
}
