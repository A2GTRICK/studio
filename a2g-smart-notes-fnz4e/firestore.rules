rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the designated admin
    function isAdmin() {
      return request.auth.uid == 'sRiwSuQlxgbGRUcO7CevaJxQBEq2';
    }

    // Default deny all reads and writes unless explicitly allowed
    match /{document=**} {
      allow read, write: if false;
    }

    // USER DATA
    // Users can read/update their own data. Admin can do anything.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid != null;

      // Users can manage their own progress subcollection
      match /progress/{docId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // NOTES
    // Authenticated users can read all notes. Admin can do anything.
    match /notes/{noteId} {
      allow read: if request.auth.uid != null;
      allow write: if isAdmin();
    }
    
    // NEWSLETTER
    // Anyone can subscribe. Only admin can manage subscribers.
    match /newsletter_subscriptions/{docId} {
      allow create: if true;
      allow read, write, delete: if isAdmin();
    }

    // MARKETING CONFIG
    // Authenticated users can read the config. Admin can write.
    // This is the key fix for the "Could not load" error.
    match /marketing_config/{docId} {
      allow read: if request.auth.uid != null;
      allow write: if isAdmin();
    }
  }
}
