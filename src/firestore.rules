
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* =============================
       HELPERS
    ============================= */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn()
        && request.auth.uid == "arvindsharma9716@gmail.com";
    }

    // Checks for a "pro" plan with a valid future expiry date
    function hasActivePremium() {
      return isSignedIn()
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.plan == "pro"
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.premiumUntil > request.time;
    }

    // Checks if user has been granted access to a specific note
    function hasNoteGrant(noteId) {
        return isSignedIn()
        && noteId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.grantedNoteIds;
    }

    // Checks if user has been granted access to a specific test
    function hasTestGrant(testId) {
        return isSignedIn()
        && testId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.grantedTestIds;
    }

    /* =============================
       NOTES (FINAL SAFE VERSION)
    ============================= */

    match /notes/{noteId} {
      allow read, list: if isSignedIn()
        && (
          resource.data.isPremium != true
          || hasActivePremium()
          || hasNoteGrant(noteId)
          || isAdmin()
        );

      allow create, update, delete: if isAdmin();
    }

    /* =============================
       MCQ SETS
    ============================= */

    match /mcqSets/{mcqId} {
      allow read, list: if isSignedIn()
        && (
          resource.data.isPremium != true
          || hasActivePremium()
          || hasTestGrant(mcqId)
          || isAdmin()
        );

      allow create, update, delete: if isAdmin();
    }

    /* =============================
       MOCK TESTS
    ============================= */

    match /test_series/{testId} {
      allow read, list: if isSignedIn()
        && (
          resource.data.isPremium != true
          || hasActivePremium()
          || hasTestGrant(testId)
          || isAdmin()
        );

      allow create, update, delete: if isAdmin();

      match /questions/{questionId} {
        allow read: if isSignedIn()
          && (
            get(/databases/$(database)/documents/test_series/$(testId)).data.isPremium != true
            || hasActivePremium()
            || hasTestGrant(testId)
            || isAdmin()
          );

        allow create, update, delete: if isAdmin();
      }
    }

    /* =============================
       BLOG / CONTENT
    ============================= */

    match /posts/{postId} {
      allow read, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /* =============================
       USERS
    ============================= */

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isSignedIn();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if false;
    }

    match /user_profiles/{userId} {
      allow read, create, update: if isOwner(userId) || isAdmin();
      allow delete: if false;
    }

    /* =============================
       TRACKING
    ============================= */

    match /note_views/{viewId} {
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid;

      allow read: if isSignedIn()
        && resource.data.userId == request.auth.uid;

      allow update, delete: if false;
    }

    match /testAttempts/{attemptId} {
      allow create: if isSignedIn();
      allow read: if isAdmin() || isOwner(resource.data.userId);
      allow update, delete: if false;
    }

    /* =============================
       ADMIN / SYSTEM
    ============================= */

    match /billing_plans/{planId} {
      allow read, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /payments/{paymentId} {
      allow read: if isSignedIn()
        && (isOwner(resource.data.userId) || isAdmin());
      allow write: if false; // Payments are written by a trusted server process
    }

    match /adminConfig/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /service_requests/{requestId} {
      allow create: if isSignedIn();
      allow read, list, update, delete: if isAdmin();
    }

    match /custom_notifications/{notificationId} {
      allow read, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /* =============================
       BLOCK EVERYTHING ELSE
    ============================= */

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
