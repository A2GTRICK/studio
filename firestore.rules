
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin
    function isAdmin() {
      // The admin UID is hardcoded for this prototype.
      // In a production app, this would likely check a custom claim.
      return request.auth.uid == 'sRiwSuQlxgbGRUcO7CevaJxQBEq2';
    }

    // Default deny all reads/writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Rules for User documents
    match /users/{userId} {
      // A user can read/write their own document
      allow read, write: if request.auth.uid == userId;
      // An admin can read any user document
      allow read: if isAdmin();

      // Rules for user's progress subcollection
      match /progress/{progressId} {
        // A user can read/write their own progress
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Rules for Notes
    match /notes/{noteId} {
      // Any authenticated user can read notes
      allow read: if request.auth != null;
      // Only admins can create, update, or delete notes
      allow write: if isAdmin();
    }
    
    // Rules for Newsletter Subscriptions
    match /newsletter_subscriptions/{subscriptionId} {
        // Anyone can create (subscribe)
        allow create: if true;
        // Only admins can read or delete subscriptions
        allow read, delete: if isAdmin();
    }
    
    // Rules for Marketing Configuration
    match /marketing_config/{docId} {
        // Anyone can read the config (to get the download link)
        allow read: if true;
        // Only admins can write to the config
        allow write: if isAdmin();
    }
  }
}
