
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* =============================
       HELPERS
    ============================= */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn()
        && request.auth.uid == "WXFMrKzg0eYHgFEspk8WoIIDc3j2";
    }

    /* =============================
       PUBLIC READ CONTENT
    ============================= */

    match /notes/{id} {
      allow read, list: if true;
    }

    match /mcqSets/{id} {
      allow read, list: if true;
    }

    match /posts/{id} {
      allow read, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /blog/{id} {
      allow read, list: if true;
    }

    match /custom_notifications/{id} {
      allow read, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /adminConfig/{doc} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /* =============================
       MOCK TESTS (FULLY WORKING)
    ============================= */

    match /test_series/{testId} {
      allow read, list: if true;
      allow create, update, delete: if isAdmin();

      match /questions/{questionId} {
        allow read: if true;
        allow create, update, delete: if isAdmin();
      }
    }

    /* =============================
       USERS (AUTH CORE)
    ============================= */

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow update: if isOwner(userId) || isAdmin();
      allow create: if isSignedIn();
      allow delete: if false;
    }

    match /user_profiles/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow update: if isOwner(userId);
      allow create: if isOwner(userId);
      allow delete: if false;
    }

    /* =============================
       PAYMENTS (SERVER WRITE ONLY)
    ============================= */

    match /payments/{paymentId} {
      allow read: if isSignedIn()
        && (
          resource.data.userId == request.auth.uid
          || isAdmin()
        );
      allow write: if false;
    }

    /* =============================
       BILLING PLANS (ADMIN ONLY) ✅ FIX
    ============================= */

    match /billing_plans/{planId} {
      allow read, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    /* =============================
       NOTE VIEW ANALYTICS
    ============================= */

    match /note_views/{viewId} {
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid;

      allow read: if isSignedIn()
        && resource.data.userId == request.auth.uid;

      allow update, delete: if false;
    }

    /* =============================
       SERVICE REQUESTS (ADMIN PANEL)
    ============================= */

    match /service_requests/{requestId} {
      allow read, list: if isAdmin();
      allow update: if isAdmin();
      allow create: if isSignedIn();
      allow delete: if false;
    }

    /* =============================
       FALLBACK — BLOCK EVERYTHING
    ============================= */

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
