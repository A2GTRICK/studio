rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null &&
             request.auth.token.admin == true;
    }
    
    // =============================
    // PUBLIC READ DATA
    // =============================

    match /notes/{id} {
      allow list, read: if true;
    }

    match /mcqSets/{id} {
      allow list, read: if true;
    }

    match /posts/{id} {
      allow list, read: if true;
    }

    match /blog/{id} {
      allow list, read: if true;
    }

    match /custom_notifications/{id} {
      allow list, read: if true;
    }

    match /adminConfig/{doc} {
      allow read: if true;
    }

    // =============================
    // TEST SERIES (CBT)
    // =============================

    match /test_series/{testId} {
      allow read: if true;

      // Admin panel (authenticated users)
      allow create, update, delete: if request.auth != null;

      match /questions/{questionId} {
        allow read: if true;
      
        allow create, update: if
          request.auth != null
          && request.resource.data.question.text is string
          && request.resource.data.question.text.size() > 0
          && request.resource.data.options is list
          && request.resource.data.options.size() >= 2
          && request.resource.data.correctAnswer is int
          && request.resource.data.correctAnswer >= 0
          && request.resource.data.correctAnswer < request.resource.data.options.size();
      
        allow delete: if request.auth != null;
      }
    }
    
    // =============================
    // GUEST MOCK TEST ATTEMPTS
    // =============================

    match /testAttempts/{attemptId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
  }
}
