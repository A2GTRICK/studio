rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default security: Deny all reads and writes by default.
    match /{document=**} {
      allow read, write: if false;
    }

    // Users Collection:
    // Allow users to read and write to their OWN user document.
    // This is important for profile updates and reading user data.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;

      // Allow admins to read/write to any user document.
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Allow any authenticated user to read all user documents (for admin panel user list)
    // This can be tightened later if needed.
    match /users/{userId} {
       allow list: if request.auth != null;
    }

    // User Progress Subcollection:
    // Allow users to read and write to their own progress data.
    match /users/{userId}/progress/{progressId} {
        allow read, write: if request.auth.uid == userId;
    }

    // Notes Collection:
    // Allow any authenticated user to read all notes.
    // Only allow admins to create, update, or delete notes.
    match /notes/{noteId} {
      allow read: if request.auth != null;
      allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Newsletter Subscriptions:
    // Allow anyone to create a subscription (write).
    // Only allow admins to read or delete subscriptions.
    match /newsletter_subscriptions/{subscriptionId} {
        allow create: if true;
        allow read, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Marketing Config Collection (FOR LEAD MAGNET):
    // Allow ONLY the designated admin to write to the lead magnet config document.
    // Allow any authenticated user to read it.
    match /marketing_config/lead_magnet {
      allow write: if request.auth.uid == 'sRiwSuQlxgbGRUcO7CevaJxQBEq2';
      allow read: if request.auth != null;
    }
  }
}
