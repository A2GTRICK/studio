rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is the designated admin
    function isAdmin() {
      // The admin UID is hardcoded for this application.
      return request.auth.uid == 'sRiwSuQlxgbGRUcO7CevaJxQBEq2';
    }

    // Rules for user-specific documents
    match /users/{userId} {
      // Users can read their own document
      allow read: if request.auth.uid == userId;
      // Users can create their own document and update their own display name
      allow write: if request.auth.uid == userId;

      // Rules for user subcollections
      match /progress/{progressId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Rules for the 'notes' collection
    match /notes/{noteId} {
      // Any authenticated user can read notes
      allow read: if request.auth != null;
      // Only the admin can create, update, or delete notes
      allow write: if isAdmin();
    }
    
    // Rules for the 'marketing_materials' collection
    match /marketing_materials/{materialId} {
        // Any authenticated user can read the materials
        allow read: if request.auth != null;
        // Only the admin can write to the materials
        allow write: if isAdmin();
    }

    // Rules for the 'newsletter_subscriptions' collection
    match /newsletter_subscriptions/{subscriptionId} {
      // Anyone can create (subscribe)
      allow create;
      // Only the admin can read or delete subscribers
      allow read, delete: if isAdmin();
    }
    
    // --- THIS IS THE FIX ---
    // Rules for the marketing configuration document
    match /marketing_config/lead_magnet {
        // Anyone can read this document to get the link for the newsletter
        allow get: if true;
        // Only the admin can update this document
        allow write: if isAdmin();
    }
    
    // Default deny for any other path not specified above
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
