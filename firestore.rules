rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // =============================
    // PUBLIC READ COLLECTIONS
    // =============================

    match /notes/{id} {
      allow list, read: if true;
      allow write: if isAdmin();
    }

    match /mcqSets/{id} {
      allow list, read: if true;
      allow write: if isAdmin();
    }

    match /posts/{id} {
      allow list, read: if true;
      allow write: if isAdmin();
    }

    match /blog/{id} {
      allow list, read: if true;
      allow write: if isAdmin();
    }

    match /custom_notifications/{id} {
      allow list, read: if true;
      allow write: if isAdmin();
    }

    // =============================
    // PRACTICE TESTS (MCQ PRACTICE)
    // =============================

    match /tests/{testId} {
      allow list, read: if true;
      allow write: if isAdmin();

      // IMPORTANT: allow questions subcollection
      match /questions/{questionId} {
        allow list, read: if true;
        allow write: if isAdmin();
      }
    }

    // =============================
    // TEST SERIES (MOCK TESTS)
    // =============================

    match /test_series/{testId} {
      allow list, read: if true;
      allow write: if isAdmin();
    }

    // =============================
    // USER-SPECIFIC DATA
    // =============================

    match /testAttempts/{id} {
      allow read: if request.auth != null
                  && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    match /users/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    match /adminConfig/{doc} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // =============================
    // ADMIN OVERRIDE (KEEP LAST)
    // =============================
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
