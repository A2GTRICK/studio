rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is the admin
    function isAdmin() {
      return request.auth.uid == 'sRiwSuQlxgbGRUcO7CevaJxQBEq2';
    }

    // --- User Data ---
    // Users can read/write to their own document.
    // Admins can read/write to any user document.
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid != null;
      
      // Allow users to manage their own progress sub-collection
      match /progress/{docId} {
        allow read, write: if request.auth.uid == userId;
      }
    }
    
    // --- Notes ---
    // Anyone can read notes.
    // Only admins can create, update, or delete them.
    match /notes/{noteId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // --- Newsletter ---
    // Anyone can create a subscription (sign up).
    // Only admins can read or delete subscriptions.
    match /newsletter_subscriptions/{subscriptionId} {
      allow create: if true;
      allow read, delete: if isAdmin();
    }
    
    // --- Marketing Materials ---
    // Anyone can read the list of materials.
    // Only admins can create, update, or delete them.
    match /marketing_materials/{materialId} {
        allow read: if true;
        allow write, delete: if isAdmin();
    }
  }
}
