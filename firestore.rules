
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Notes can be read by any authenticated user, but only written by an admin.
    match /notes/{noteId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Users can create their own user document.
    // They can read and update their own document, but not others'.
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow read, update: if request.auth.uid == userId;

      // Users can write to their own progress sub-collection.
      match /progress/{progressId} {
          allow read, write: if request.auth.uid == userId;
      }
    }
    
    // Anyone can subscribe to the newsletter.
    match /newsletter_subscriptions/{subscriptionId} {
      allow create: if true;
    }
  }
}
