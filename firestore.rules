rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for Admin UID
    function isAdmin() {
      return request.auth.uid == 'sRiwSuQlxgbGRUcO7CevaJxQBEq2';
    }

    // Rules for Notes
    match /notes/{noteId} {
      // Anyone can read notes
      allow read: if true;
      // Only admins can create, update, or delete notes
      allow write: if isAdmin();
    }

    // Rules for Users
    match /users/{userId} {
      // Allow users to read their own document, or admins to read any
      allow read: if request.auth.uid == userId || isAdmin();
      // Allow users to create their own document on signup
      allow create: if request.auth.uid == userId;
      // Allow users to update their own document, or admins to update any
      allow update: if request.auth.uid == userId || isAdmin();
    }
    
    // Rules for User-specific progress sub-collection
    match /users/{userId}/progress/{progressId} {
        // Only the user themselves can read and write their own progress
        allow read, write: if request.auth.uid == userId;
    }

    // Rules for Newsletter Subscriptions
    match /newsletter_subscriptions/{subscriptionId} {
        // Anyone can create a subscription (e.g. from the landing page)
        allow create: if true;
        // Only admins can read, update, or delete subscriptions
        allow read, update, delete: if isAdmin();
    }
  }
}
