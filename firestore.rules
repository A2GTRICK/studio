
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      // Check if the user's UID matches the hardcoded Admin UID
      return request.auth.uid == 'sRiwSuQlxgbGRUcO7CevaJxQBEq2';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // ANY authenticated user can get their OWN document
      allow get: if request.auth != null && request.auth.uid == userId;
      // ANY authenticated user can see the list of users (for admin panel)
      // but this is broad. Admin panel logic should handle filtering.
      allow list: if request.auth != null;

      // A user can CREATE their OWN document
      // This happens on first sign-up
      allow create: if request.auth.uid == userId &&
                      request.resource.data.uid == userId &&
                      request.resource.data.keys().hasAll(['uid', 'email', 'displayName', 'photoURL', 'createdAt', 'lastLogin']);


      // A user can UPDATE their OWN document, but only specific fields
      allow update: if request.auth.uid == userId &&
                      // This ensures a user can only update their name, photo, or last login time.
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly(['displayName', 'photoURL', 'lastLogin']);

      // Admin can do anything
      allow read, write: if isAdmin();

      // Rules for the 'progress' sub-collection within a user
      match /progress/{topicId} {
        // A user can only read/write to their OWN progress sub-collection
        allow read, write: if request.auth.uid == userId;
        // Admin can do anything
        allow read, write: if isAdmin();
      }
    }

    // Rules for the 'notes' collection
    match /notes/{noteId} {
      // ANY authenticated user can read notes
      allow read: if request.auth != null;
      // ONLY an admin can create, update, or delete notes
      allow write: if isAdmin();
    }
    
    // Rules for the 'newsletter_subscriptions' collection
    match /newsletter_subscriptions/{subscriptionId} {
        // ANYONE can create a subscription (public-facing form)
        allow create: if true;
        // ONLY admin can read or delete subscriptions
        allow read, delete: if isAdmin();
    }
  }
}
