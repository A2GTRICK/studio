rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------
    // ADMIN CONFIG (PUBLIC READ)
    // ----------------------
    match /adminConfig/{doc} {
      allow read: if true;  // REQUIRED for admin panel to load the adminCode
      allow update: if request.resource.data.adminOldKey ==
                    get(/databases/$(database)/documents/adminConfig/main).data.adminCode;
      allow create, delete: if false;
    }

    // ----------------------
    // NOTES COLLECTION
    // ----------------------
    match /notes/{noteId} {
      allow read: if true;
      allow create: if request.resource.data.adminKey ==
                     get(/databases/$(database)/documents/adminConfig/main).data.adminCode;
      allow update, delete: if false;
    }

    // ----------------------
    // MCQ COLLECTION
    // ----------------------
    match /mcqSets/{mcqId} {
      allow read: if true;
      allow create: if request.resource.data.adminKey ==
                     get(/databases/$(database)/documents/adminConfig/main).data.adminCode;
      allow update, delete: if false;
    }
  }
}
