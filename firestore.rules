rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow logged-in users to read from the 'notes' collection.
    // Admin users have full write access.
    match /notes/{noteId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Allow users to create their own user document on signup
    // and read their own user data. Admins can read anyone's data.
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow read: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow update: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Allow users to write to and read from their own progress sub-collection.
    match /users/{userId}/progress/{progressId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Allow users to manage their own newsletter subscription status.
    match /newsletter_subscriptions/{subId} {
      allow read, write: if request.auth != null;
    }
  }
}
