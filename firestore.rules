rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // TEMPORARY DEBUG RULE - MAKES ENTIRE DATABASE READABLE
    match /{path=**} {
      allow read: if true;
    }

    // =============================
    // ADMIN CONFIG (public read)
    // =============================
    match /adminConfig/{doc} {
      // allow read: if true; // Covered by debug rule
      allow write: if false;
    }

    // =============================
    // NOTES (public read)
    // =============================
    match /notes/{noteId} {
      // allow read: if true; // Covered by debug rule
      allow write: if false;
      match /{sub=**} {
        // allow read: if true; // Covered by debug rule
        allow write: if false;
      }
    }
    
    // =============================
    // MCQ SETS (public read)
    // =============================
    match /mcqSets/{setId} {
      // allow read: if true; // Covered by debug rule
      allow write: if false;
      match /{sub=**} {
        // allow read: if true; // Covered by debug rule
        allow write: if false;
      }
    }

    // =============================
    // CUSTOM NOTIFICATIONS (public read)
    // =============================
    match /custom_notifications/{id} {
        // allow read: if true; // Covered by debug rule
        allow write: if false;
    }
    
    // =============================
    // BLOG POSTS (public read)
    // =============================
    match /posts/{postId} {
      // allow read: if true; // Covered by debug rule
      allow write: if false;
      match /{sub=**} {
        // allow read: if true; // Covered by debug rule
        allow write: if false;
      }
    }
    
    // =============================
    // TEST ENGINE (public read)
    // =============================
    match /tests/{testId} {
      // allow read: if true; // Covered by debug rule
      allow write: if false;
      match /{sub=**} {
        // allow read: if true; // Covered by debug rule
        allow write: if false;
      }
    }

    // =============================
    // RESULTS (SERVER ONLY WRITE)
    // =============================
    match /results/{resultId} {
      // allow read: if true; // Covered by debug rule
      allow create, update, delete: if false;
    }

    // =============================
    // USERS COLLECTION (private data)
    // =============================
    match /users/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if false;
    }

    // =============================
    // STRICT DENY EVERYTHING ELSE (Now overridden by debug rule for reads)
    // =============================
    match /{document=**} {
      allow write: if false;
    }
  }
}
