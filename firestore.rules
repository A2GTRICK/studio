rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =============================
    // PUBLIC READ COLLECTIONS
    // =============================

    match /notes/{id} {
      allow list, read: if true;
    }

    match /mcqSets/{id} {
      allow list, read: if true;
    }

    match /posts/{id} {
      allow list, read: if true;
    }

    match /blog/{id} {
      allow list, read: if true;
    }

    match /custom_notifications/{id} {
      allow list, read: if true;
    }

    // =============================
    // PRACTICE TESTS (MCQ PRACTICE)
    // =============================

    match /tests/{testId} {
      allow list, read: if true;

      match /questions/{questionId} {
        allow list, read: if true;
      }
    }

    // =============================
    // MOCK TEST SERIES
    // =============================

    match /test_series/{testId} {
      allow list, read: if true;
    }

    // =============================
    // TEST ATTEMPTS (GUEST MODE)
    // =============================

    match /testAttempts/{attemptId} {
      // Allow anyone to submit
      allow create: if true;

      // Disable reading attempts (privacy-safe)
      allow read, update, delete: if false;
    }

    // =============================
    // ADMIN CONFIG (READ ONLY)
    // =============================

    match /adminConfig/{doc} {
      allow read: if true;
    }
  }
}
