
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // PUBLIC ACCESS: Allow anyone to read notes and services data.
    match /notes/{noteId} {
      allow read: if true;
      allow write: if false; // Only admin can write (handled below).
    }
    
    // USER-SPECIFIC ACCESS
    // Allow users to read and write to their own documents (e.g., progress, payment requests).
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // NEWSLETTER: Allow anyone to create a new newsletter subscription.
    match /newsletter_subscriptions/{subscriptionId} {
        allow create: if true;
        allow read, update, delete: if false; // Only admin can manage.
    }
    
    // ADMIN-ONLY ACCESS
    // The admin has special privileges defined below.
    // The admin UID must be hardcoded here for security.
    function isAdmin() {
      return request.auth.uid == 'sRiwSuQlxgbGRUcO7CevaJxQBEq2';
    }

    // Allow admin to read/write all user documents for management.
    match /users/{userId} {
      allow read, write: if isAdmin();
    }
    
    // Allow admin to manage the newsletter list.
    match /newsletter_subscriptions/{subscriptionId} {
      allow read, delete: if isAdmin();
    }

    // Allow admin to manage all notes.
    match /notes/{noteId} {
        allow write: if isAdmin();
    }
    
    // MARKETING CONFIG: Allow admin to manage the lead magnet link.
    // This is the specific rule that fixes the error.
    match /marketing_config/lead_magnet {
      allow read: if true; // Anyone can read the config.
      allow write: if isAdmin(); // ONLY the admin can write to it.
    }

    // By default, deny all other access to all collections.
    match /{path=**}/ {
      allow read, write: if false;
    }
  }
}
