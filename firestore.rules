rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow users to read and update their own user document.
    // This is required for saving profile information and payment requests.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // Allow anyone (even unauthenticated users) to read public notes.
    match /notes/{noteId} {
      allow read: if true;
    }
    
    // Allow only authenticated admins to create, update or delete notes.
    // This assumes an 'admin' custom claim is set on the user's token.
    // As a fallback, I'm locking it down completely for write operations to non-admins.
    match /notes/{noteId} {
      allow write: if false; // Secure by default
    }

    // Allow users to write to their own progress subcollection
    match /users/{userId}/progress/{progressId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow newsletter subscriptions from anyone
    match /newsletter_subscriptions/{subscriptionId} {
        allow create: if true;
    }

    // Admins can read newsletter subscriptions
    match /newsletter_subscriptions/{subscriptionId} {
        allow read, delete: if false; // Locked down for now for security
    }
  }
}
