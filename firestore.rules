rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    // - Allow users to read and update their own document.
    // - Deny creating or deleting their own document via the client.
    // - Deny reading/writing to other users' documents.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;

      // Allow authenticated users to read and write to their own progress subcollection.
      match /progress/{topicId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Notes Collection
    // - Allow any authenticated user to read all notes.
    // - Deny write access to everyone (creation, updates, deletion should only be done by an admin via a backend process, which is handled by the app's current structure).
    match /notes/{noteId} {
      allow read: if request.auth != null;
      allow write: if false; // Secure by default
    }

    // Newsletter Subscriptions
    // - Allow anyone to create (subscribe).
    // - Deny read/update/delete access from the client for privacy.
    match /newsletter_subscriptions/{subscriptionId} {
        allow create: if true;
        allow read, update, delete: if false;
    }
  }
}
