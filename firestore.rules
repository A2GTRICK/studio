rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if a user is the designated admin
    function isAdmin() {
      return request.auth.uid == 'sRiwSuQlxgbGRUcO7CevaJxQBEq2';
    }
    
    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Users Collection:
    // - Anyone can create their own user document (on signup).
    // - Users can only read/update their own data.
    // - The admin can read/write any user document.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId || isAdmin();
      allow create: if isSignedIn();
      
      // Allow saving/reading progress only for the authenticated user
      match /progress/{progressId} {
         allow read, write: if request.auth.uid == userId;
      }
    }

    // Notes Collection:
    // - The admin can create, update, and delete any note.
    // - Any signed-in user can read all notes.
    match /notes/{noteId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // Newsletter Subscriptions:
    // - Anyone can create a new subscription (e.g., from the landing page).
    // - Only the admin can read or delete subscriptions.
    match /newsletter_subscriptions/{subscriptionId} {
        allow create: if true;
        allow read, delete: if isAdmin();
    }
    
    // Marketing Config:
    // - Only the admin can update the lead magnet link.
    // - Anyone can read it so it can be provided to users on subscription.
    match /marketing_config/lead_magnet {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}
