rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ========================
    // ADMIN CONFIG (public read)
    // ========================
    match /adminConfig/{doc} {
      allow read: if true;
      allow write: if false;
    }

    // ========================
    // NOTES (public read)
    // ========================
    match /notes/{id} {
      allow read: if true;
      allow write: if false;
    }

    // ========================
    // MCQ SETS (public read)
    // ========================
    match /mcqSets/{id} {
      allow read: if true;
      allow write: if false;
    }

    // ========================
    // CUSTOM NOTIFICATIONS (public read)
    // ========================
    match /custom_notifications/{id} {
      allow read: if true;
      allow write: if false;
    }

    // ========================
    // BLOG POSTS (public read)
    // ========================
    match /posts/{id} {
      allow read: if true;
      allow write: if false;
    }

    // ========================
    // USERS (private)
    // ========================
    match /users/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if false;
    }

    // ========================
    // DEFAULT DENY
    // ========================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
