rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Admins can read and write all documents
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // Public read-only access for specific collections
    match /notes/{id} {
      allow list, read: if true;
    }

    match /mcqSets/{id} {
      allow list, read: if true;
      allow write: if isAdmin();
    }

    match /posts/{id} {
      allow list, read: if true;
    }
    
    match /blog/{id} {
      allow list, read: if true;
    }

    match /custom_notifications/{id} {
      allow list, read: if true;
    }

    match /tests/{id} {
      allow list, read: if true;
    }
    
    // Specific rules for non-admin users
    match /testAttempts/{id} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    match /users/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
    }

    match /adminConfig/{doc} {
      allow read: if true;
    }
  }
}
