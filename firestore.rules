rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /notes/{noteId} {
      allow read: if true;               // anyone can read notes
      allow create: if request.auth != null;           // only logged-in users can create
      allow update, delete: if request.auth != null && request.auth.token.admin == true; // admin-only edits/deletes
    }

    // keep other collections strict (adjust as needed)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
