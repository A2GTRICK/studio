
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for Admin UID
    function isAdmin() {
      return request.auth.uid == 'sRiwSuQlxgbGRUcO7CevaJxQBEq2';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Admins can do anything.
      // Users can read any profile (e.g., for future features).
      // Users can only create their own document.
      // Users can only update their own document, and only specific fields.
      allow read, update, delete: if isAdmin();
      allow read: if request.auth.uid != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId && request.resource.data.keys().hasAll(['displayName', 'lastLogin']);

      // Rules for the 'progress' sub-collection within each user document
      match /progress/{topicId} {
        // Admins can do anything.
        // Users can only read and write to their own progress documents.
        allow read, write, delete: if isAdmin();
        allow read, write: if request.auth.uid == userId;
      }
    }
    
    // Rules for the 'notes' collection
    match /notes/{noteId} {
      // Any authenticated user can read notes.
      // Only the admin can create, update, or delete notes.
      allow read: if request.auth.uid != null;
      allow write: if isAdmin();
    }
    
    // Rules for the 'newsletter_subscriptions' collection
    match /newsletter_subscriptions/{subscriptionId} {
        // Anyone can create a subscription (e.g., from the landing page).
        // Only the admin can read or delete subscriptions.
        allow create;
        allow read, delete: if isAdmin();
    }
  }
}
