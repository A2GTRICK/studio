rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Notes - public read, admin write
    match /notes/{noteId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // MCQ sets - public read, admin write
    match /mcqSets/{mcqId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // Users - each user can read their profile; admin can read all
    match /users/{uid} {
      allow read: if request.auth != null && (request.auth.uid == uid || request.auth.token.admin == true);
      allow write: if request.auth != null && (request.auth.uid == uid || request.auth.token.admin == true);
    }

    // generation_requests - admin can read all, user can read their own
    match /generation_requests/{id} {
      allow create: if false; // only functions write (admin SDK)
      allow read: if request.auth != null && (request.auth.token.admin == true || request.auth.uid == resource.data.userId);
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
