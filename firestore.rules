
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Notes, MCQ Sets, and Notifications are publicly readable.
    // This is simple and effective for content that is not user-specific.
    match /notes/{noteId} {
      allow read: if true;
      allow write: if false; // Writes should be handled by admin functions/panel
    }

    match /mcqSets/{mcqId} {
      allow read: if true;
      allow write: if false; // Writes should be handled by admin functions/panel
    }

    match /custom_notifications/{notifId} {
      allow read: if true;
      // Allow writes only by authenticated admins.
      // This rule is for client-side admin panels. Server-side admin logic bypasses this.
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Admin config is readable for the client-side admin login page to verify the code.
    // Update is restricted to authenticated admins.
    match /adminConfig/{doc} {
      allow read: if true;
      allow update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow create, delete: if false;
    }

    // Default deny: block all other access.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
