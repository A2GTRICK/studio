
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for admin UID
    function isAdmin() {
      return request.auth.uid == 'sRiwSuQlxgbGRUcO7CevaJxQBEq2';
    }

    // Allow users to read their own data, write their own progress, and be managed by an admin
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if request.auth.uid == userId; // For displayName updates
      
      // Payment requests are written by the user themselves
      allow update: if request.auth.uid == userId; 

      match /progress/{docId} {
        allow write: if request.auth.uid == userId;
      }
    }
    
    // Allow any authenticated user to read notes, but only admin can create/edit/delete
    match /notes/{noteId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Allow anyone to subscribe to the newsletter, but only admin can manage subscribers
    match /newsletter_subscriptions/{subscriptionId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // Allow admin to manage the lead magnet link
    match /marketing_config/lead_magnet {
      allow read: if request.auth != null; // Allow any logged-in user to read
      allow write: if isAdmin();
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
