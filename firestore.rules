rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default Security: Disallow all reads and writes by default.
    match /{document=**} {
      allow read, write: if false;
    }
    
    // --- User Profiles ---
    // A user can create their own profile upon signup.
    // A user can read/update their own profile.
    // The admin can read/write any user profile.
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow read, update: if request.auth.uid == userId || request.auth.uid == 'sRiwSuQlxgbGRUcO7CevaJxQBEq2';
      // Deleting users should be handled via Firebase Admin SDK, not client-side.
      allow delete: if false;
    }

    // --- User-Specific Subcollections (e.g., Progress) ---
    // A user can read and write to their own progress subcollection.
    // The admin can also access this data.
    match /users/{userId}/progress/{progressId} {
        allow read, write: if request.auth.uid == userId || request.auth.uid == 'sRiwSuQlxgbGRUcO7CevaJxQBEq2';
    }
    
    // --- Notes Collection ---
    // Anyone who is logged in can read notes.
    // Only the admin can create, update, or delete notes.
    match /notes/{noteId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth.uid == 'sRiwSuQlxgbGRUcO7CevaJxQBEq2';
    }

    // --- Marketing Configuration (Lead Magnet) ---
    // This rule is the specific fix for the "permission denied" error.
    // It allows ONLY the admin to write to the lead magnet config document.
    // It allows any authenticated user to read it.
    match /marketing_config/lead_magnet {
      allow write: if request.auth.uid == 'sRiwSuQlxgbGRUcO7CevaJxQBEq2';
      allow read: if request.auth != null;
    }
    
    // --- Newsletter Subscriptions ---
    // Anyone can subscribe to the newsletter (no auth required for this action).
    // Only the admin can read or delete subscriber emails.
    match /newsletter_subscriptions/{subscriptionId} {
      allow create: if true;
      allow read, delete: if request.auth.uid == 'sRiwSuQlxgbGRUcO7CevaJxQBEq2';
    }
  }
}
