
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- USERS ---
    // A user can read and write to their own document in the 'users' collection.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;

      // A user can write to their own 'progress' subcollection to save quiz results.
      match /progress/{progressId} {
        allow write: if request.auth.uid == userId;
      }
    }

    // --- NOTES ---
    // Any authenticated user can read notes.
    // Only an admin can write (create, update, delete) notes.
    // This rule assumes you have an 'isAdmin' field in the user's document.
    match /notes/{noteId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // --- NEWSLETTER ---
    // Anyone (even unauthenticated users) can create a document in the newsletter collection.
    // This allows the landing page subscription form to work.
    match /newsletter_subscriptions/{subscriptionId} {
      allow create: if true;
    }
  }
}
